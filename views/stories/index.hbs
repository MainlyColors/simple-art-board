<h1>
  Stories
</h1>
<div class='row'>
  {{#each stories}}
    <div class='col s12 m4'>
      <div class='card'>
        <div class='card-image'>
          {{!-- within this #each user === stories.user, to access the user object that holds current user we need to go one level outside the #each so ../user --}}
          {{!-- triple {{{}}} to parse HTML with handlebars --}}
          {{{editIcon user ../user _id}}}
        </div>
        <div class='card-content center-align'>
          <h5>
            {{title}}
          </h5>
          <p>
            {{! truncate function runs first then the outer stripTags function }}
            {{stripTags (truncate body 150)}}
          </p>
          <br />
          <div class='chip'>
            <img src='{{user.image}}' alt='' />
            <a href='/stories/user/{{user._id}}'>
              {{user.displayName}}
            </a>
          </div>
        </div>
        <div class='card-action center-align'>
          <a href='/stories/{{_id}}' class='btn grey'>
            Read More
          </a>
        </div>
      </div>
    </div>
  {{else}}
    <p>
      No stories to display
    </p>
  {{/each}}
</div>