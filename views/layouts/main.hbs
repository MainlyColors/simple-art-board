<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />

    {{! materialize ui lib}}
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css'
    />

    {{! font-awesome }}
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css'
      integrity='sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    />

    {{! personal styles }}
    <link rel='stylesheet' href='css/style.css' />
    <title>
      SimpleArtBoard
    </title>
  </head>
  <body>
    {{!-- handlebars partial --}}
    {{> _header}}
    {{> _add_btn}}
    <div class='container'>
      {{{body}}}
    </div>

    <script
      src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js'
    ></script>
{{!-- ckeditor --}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ckeditor/4.19.1/ckeditor.js" integrity="sha512-Ooi9IbjM2SIDjQ02ENbPFuuORT8F8Rc+rowcYfLneDwKRxw1+gVVj5tciVmV/APnA/Ys+qy1MbNKK3k2EaAHcw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
      // materialize requires the sidenav to be initialized for the hamburger menu to work
      M.Sidenav.init(document.querySelector('.sidenav'));
      // materialize requires the FormSelect to be initialized for select menu to work on add story
      M.FormSelect.init(document.querySelector('#status'))

// replaces textarea because textarea has a name="body" on stories/add.hbs
      CKEDITOR.replace('body', {
        plugins: 'wysiwygarea, toolbar, basicstyles, link'
      })
    </script>
  </body>
</html>